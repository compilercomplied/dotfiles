ws-icon-7 = 7;
ws-icon-8 = 8;
ws-icon-9 = 9;
ws-icon-0 = 10;
;ws-icon-default = ♟


[module/mpd]
type = internal/mpd

format-padding = 2
;format-online = %{F#268bd2} <label-song> %{F-} <bar-progress> <label-time>
format-online = %{F#268bd2} <label-song> %{F-} <label-time>

label-song-maxlen = 40
label-song = %artist% - %title%
label-offline = mpd is offline
label-song-ellipsis = true
label-time = %elapsed% / %total%
format-underline = #f90000

bar-progress-width = 35
bar-progress-indicator = |
bar-progress-fill = ─
bar-progress-empty = ─

; Used to display the state of random/repeat/repeatone
; Only applies if <icon-[random|repeat|repeatone]> is used
toggle-on-foreground = ${colors.foreground}
toggle-off-foreground = ${colors.foreground-alt}


[module/date]
type = internal/date
interval = 10
label-underline = ${colors.blue}
date =  %%{F#999}%a %e %b%%{F-}  %%{F#268bd2}%H:%M%%{F-}
;date = "%b, %d %a"
;time = %H:%M
;format-prefix = 
;format-prefix-foreground = ${colors.foreground-alt}
;label = "%date%  | %time% "


[module/volume]
